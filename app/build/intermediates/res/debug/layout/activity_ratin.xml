<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/scoring"
    tools:context="com.sydeem.girafe.culturebandedessine.RatinActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_ratin"
        android:fontFamily="@string/police"
        android:textStyle="bold"
        android:textColor="@color/rouge"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="30dp"/>
 <!-- Bloc 1 pour le premier -->
    <LinearLayout
        android:id="@+id/bloc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/or"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/points1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Points"
                    android:fontFamily="@string/police"
                    android:textColor="@color/rouge"
                    android:textStyle="italic"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="  /  "/>
                <TextView
                    android:id="@+id/temps1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temps"
                    android:fontFamily="@string/police"
                    android:textColor="@color/rouge"
                    android:textStyle="italic"
                    android:textSize="15dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/pseudo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/police"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:text="Personnes"/>
         </LinearLayout>

    </LinearLayout>

  <!-- Bloc 2 pour le 2nd -->
    <LinearLayout
        android:id="@+id/bloc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/argent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/points2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Points"
                    android:fontFamily="@string/police"
                    android:textColor="@color/rouge"
                    android:textStyle="italic"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="  /  "/>
                <TextView
                    android:id="@+id/temps2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temps"
                    android:fontFamily="@string/police"
                    android:textColor="@color/rouge"
                    android:textStyle="italic"
                    android:textSize="15dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/pseudo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/police"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:text="Personnes"/>
        </LinearLayout>

    </LinearLayout>

  <!-- Bloc 3 pour le troisieme -->
    <LinearLayout
        android:id="@+id/bloc3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bronze"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/points3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Points"
                    android:fontFamily="@string/police"
                    android:textColor="@color/rouge"
                    android:textStyle="italic"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="  /  "/>
                <TextView
                    android:id="@+id/temps3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temps"
                    android:fontFamily="@string/police"
                    android:textColor="@color/rouge"
                    android:textStyle="italic"
                    android:textSize="15dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/pseudo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/police"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:text="Personnes"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_marginTop="37dp"
        android:background="@drawable/button"
        android:text="@string/start"
        android:textStyle="bold"
        android:textSize="25dp"
        android:fontFamily="@string/police"
        android:onClick="startClick"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
